{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "./lib"
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./lib/**/*",
    "./jest.config.js"
  ]
}