{
  "compilerOptions": {
    "lib": ["es2015", "ES6", "ES5", "ESNext"],
    "target": "ES3",
    "allowJs": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "declaration": true,
    "rootDir": "./src/",
    "outDir": "./lib/",
    "module": "umd",
    "moduleResolution": "node"
  },
  "include": [
    "src",
    "test"
  ],
  "exclude": [
    "dist/**/*"
  ]
}